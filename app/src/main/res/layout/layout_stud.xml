<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:gravity="center_vertical"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:id="@+id/textNoStudents"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:text="@string/no_students_yet"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/layout3OrMoreStudent"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/profile3"
                android:layout_marginStart="50dp"
                android:src="@drawable/profile_placeholder"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/profile2"
                android:layout_marginStart="25dp"
                android:src="@drawable/profile_placeholder"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/profile1"
                android:src="@drawable/profile_placeholder"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutMoreStudents"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:id="@+id/textMoreStudentCount"
                android:fontFamily="@font/poppins"
                android:layout_marginEnd="5dp"
                android:text="@string/_0"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="@string/more_student_joined_the_class"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>