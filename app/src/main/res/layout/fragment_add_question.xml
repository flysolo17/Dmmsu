<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".views.teacher.components.AddQuestionFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:hint="@string/question"
                    android:layout_height="wrap_content"
                    android:id="@+id/inputQuestion"
                    android:background="@drawable/questions_edt"
                    android:padding="12dp"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/poppins"
                    android:layout_marginVertical="5dp"
                    android:drawableLeft="@drawable/ic_baseline_question_answer_24"
                    android:inputType="textMultiLine"/>
                <EditText
                    android:layout_width="match_parent"
                    android:hint="@string/description"
                    android:layout_height="wrap_content"
                    android:id="@+id/inputDesc"
                    android:background="@drawable/questions_edt"
                    android:padding="12dp"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/poppins"
                    android:layout_marginVertical="5dp"
                    android:drawableLeft="@drawable/ic_baseline_description_24"
                    android:inputType="textMultiLine"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:orientation="vertical"
                    android:background="@drawable/questions_edt"
                    android:padding="12dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_baseline_image_24"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Image"

                            android:layout_weight="1"
                            android:fontFamily="@font/poppins"
                            />
                        <ImageButton
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:id="@+id/buttonAddImage"
                            android:layout_marginHorizontal="10dp"
                            android:background="@drawable/ic_baseline_add_24"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxHeight="200dp"
                        android:id="@+id/imageAttachment"/>
                </LinearLayout>
                <EditText
                    android:layout_width="match_parent"
                    android:hint="@string/answer"
                    android:layout_height="wrap_content"
                    android:id="@+id/inputAnswer"
                    android:background="@drawable/questions_edt"
                    android:padding="12dp"
                    android:layout_marginVertical="5dp"
                    android:fontFamily="@font/poppins"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_baseline_question_answer_24"
                    android:inputType="textMultiLine"/>

                <EditText
                    android:layout_width="match_parent"
                    android:hint="@string/points"
                    android:layout_height="wrap_content"
                    android:id="@+id/inputPoints"
                    android:background="@drawable/questions_edt"
                    android:padding="12dp"

                    android:layout_marginVertical="5dp"
                    android:fontFamily="@font/poppins"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_baseline_sports_score_24"
                    android:inputType="number"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/questions_edt"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Choices"

                            android:fontFamily="@font/poppins"/>
                        <ImageButton
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:id="@+id/buttonAddChoice"
                            android:background="@drawable/ic_baseline_add_24"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/cardAddChoice"
                        android:visibility="gone"
                        android:padding="10dp">
                        <EditText
                            android:id="@+id/inputChoice"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="@string/choice" />
                        <ImageButton
                            android:id="@+id/buttonSaveChoice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/ic_save"
                            android:backgroundTint="#66BB6A" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/layoutChoices"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/buttonBack"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins"
            android:textAllCaps="false"
            style="@style/Widget.MaterialComponents.Button.TextButton"/>
        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textColor="@color/black"
            android:layout_gravity="end|center_vertical"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textAllCaps="false"
            android:id="@+id/buttonSaveQuestion"/>
    </LinearLayout>
</LinearLayout>