<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f5f9"
    android:orientation="vertical"
    tools:context=".views.student.nav.StudentClassesNav">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:background="@color/white"
        android:paddingHorizontal="10dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/inputSearch"
            android:background="@drawable/search_bg"
            android:padding="10dp"
            android:inputType="text"
            android:layout_weight="1"
            android:gravity="bottom"
            android:fontFamily="@font/poppins"
            android:textSize="14sp"
            android:hint="@string/input_code_here"
           />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:id="@+id/buttonSearch"
            android:paddingHorizontal="20dp"
            android:background="@drawable/button_search_bg"
            android:src="@drawable/ic_baseline_search_24"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/your_classes"
        android:textColor="@color/black"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerviewStudentClass"
        tools:listitem="@layout/row_student_classroom_2"/>
</LinearLayout>