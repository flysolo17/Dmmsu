<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_700"
    android:orientation="vertical"
    android:fillViewport="true"
    tools:context=".views.student.nav.StudentClassesNav">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:padding="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textType"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/teacher"
                    android:textColor="#FFCCD5"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/juan_dela_cruz"
                    android:textColor="@color/white"
                    android:id="@+id/textFullname"
                    android:textSize="22dp"/>

            </LinearLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/imageProfile"
                android:src="@drawable/profile_placeholder"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/box"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:layout_margin="10dp"
        android:paddingHorizontal="10dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/inputSearch"
            android:background="@drawable/search_bg"
            android:padding="10dp"
            android:inputType="text"
            android:layout_weight="1"
            android:gravity="bottom"
            android:fontFamily="@font/poppins"
            android:textSize="14sp"
            android:hint="@string/input_code_here"
           />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:id="@+id/buttonSearch"
            android:paddingHorizontal="20dp"
            android:background="@drawable/button_search_bg"
            android:src="@drawable/ic_baseline_search_24"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/your_classes"
        android:textColor="@color/black"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerviewStudentClass"
        tools:listitem="@layout/row_student_classroom_2"/>
    </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>