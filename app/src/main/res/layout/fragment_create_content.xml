<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/purple_700"
    tools:context=".views.teacher.components.CreateContent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <ImageButton
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/buttonBack"
            android:background="@drawable/ic_back"
            android:layout_gravity="center_vertical"
            android:backgroundTint="@color/white"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="Create Content"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/box"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#EFEEFC"
                android:id="@+id/buttonAttachFile"
                android:clickable="true"
                app:cardCornerRadius="20dp"
                android:focusable="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="10dp">
                    <ImageButton
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:backgroundTint="@color/purple_700"
                        android:background="@drawable/ic_baseline_image_24"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/purple_700"
                        android:layout_margin="10dp"
                        android:text="Add image"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/inputTitle"
                android:backgroundTint="#EFEEFC"
                android:textSize="12sp"
                android:padding="15dp"
                android:hint="Content Title"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:background="@drawable/search_bg_2"
                android:inputType="text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/inputDesc"
                android:hint="Content Title"
                android:padding="15dp"
                android:textSize="12sp"
                android:backgroundTint="#EFEEFC"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:inputType="textMultiLine"

                android:background="@drawable/search_bg_2" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/layoutFile"/>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/buttonSaveContent"
            android:layout_margin="10dp"
            app:cornerRadius="10dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Save"
            android:layout_gravity="bottom"/>
        </LinearLayout>




</LinearLayout>