<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#f7f5f9"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    tools:context=".views.student.nav.StudentScoreboardNav">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:background="@color/purple_700"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="bottom|center"
        android:layout_marginHorizontal="20dp"
        android:layout_height="400dp">
        <LinearLayout
            android:layout_width="120dp"
            android:gravity="center"
            android:layout_weight=".8"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_margin="10dp"
                android:layout_height="60dp"
                android:id="@+id/image2"
                android:src="@drawable/profile_placeholder"/>
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/white"
                android:id="@+id/textFullname2"
                android:text="@string/juan_dela_cruz"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 dp"
                android:id="@+id/textPoints2"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_semibold"
                 android:background="@drawable/box3"
                android:paddingHorizontal="15dp"
                android:backgroundTint="#9087E5"
                android:layout_marginVertical="10dp"
                android:paddingVertical="5dp"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:backgroundTint="#9087E5"
                android:background="@drawable/box4">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:textSize="39sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/white"
                    android:text="2"/>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="120dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_margin="10dp"
                android:id="@+id/image1"
                android:layout_height="60dp"
                android:src="@drawable/profile_placeholder"/>
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/white"
                android:id="@+id/textFullname1"
                android:text="@string/juan_dela_cruz"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 dp"
                android:id="@+id/textPoints1"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_semibold"
                android:background="@drawable/box3"
                android:paddingHorizontal="15dp"
                android:backgroundTint="#9087E5"
                android:layout_marginVertical="10dp"
                android:paddingVertical="5dp"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:backgroundTint="#968DE6"
                android:background="@drawable/box6">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:textSize="39sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/white"
                    android:text="1"/>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:gravity="center"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:id="@+id/image3"
                android:layout_margin="10dp"
                android:layout_height="60dp"
                android:src="@drawable/profile_placeholder"/>
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/white"
                android:id="@+id/textFullname3"
                android:text="@string/juan_dela_cruz"/>

            <TextView
                android:id="@+id/textPoints3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="@drawable/box3"
                android:backgroundTint="#9087E5"
                android:fontFamily="@font/poppins_semibold"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:text="0 dp"
                android:textColor="@color/white" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:backgroundTint="#9087E5"
                android:background="@drawable/box5">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:textSize="39sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/white"
                    android:text="3"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingVertical="20dp"
        android:paddingHorizontal="10dp"
        android:backgroundTint="#EFEEFC"
        android:background="@drawable/box">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            tools:listitem="@layout/row_responses"
            android:layout_height="match_parent"
            android:id="@+id/recyclerviewScoreboard"/>
    </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>